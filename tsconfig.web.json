{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/utils/**/*",
    "src/types/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
